{
  "name": "alemonjs-xiuxian",
  "version": "1.3.0",
  "description": "凡人修仙文字游戏",
  "author": "ningmengchongshui",
  "type": "module",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./package": "./package.json"
  },
  "scripts": {
    "dev": "npx lvy dev",
    "view": "npx lvy dev --jsxp",
    "build": "lvy build",
    "eslint": "eslint src --fix",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code",
    "lint:staged": "git diff --cached --name-only --diff-filter=ACMRTUXB | grep -E '\\.(ts|tsx|js)$' | xargs -r eslint --cache --cache-location .eslintcache",
    "lint:changed": "git diff origin/main...HEAD --name-only --diff-filter=ACMRTUXB | grep -E '\\.(ts|tsx|js)$' | xargs -r eslint --cache --cache-location .eslintcache",
    "lint:fix": "eslint src --ext .ts,.tsx,.js --fix --cache --cache-location .eslintcache",
    "lint:baseline": "eslint -f json src > eslint-baseline.json || true"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "jsxp": "^1.2.2",
    "lodash-es": "^4.17.21",
    "md5": "^2.3.0",
    "classnames": "^2.5.1",
    "node-schedule": "^2.1.1"
  }
}
