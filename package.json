{
  "name": "alemonjs-xiuxian",
  "version": "1.3.0",
  "description": "凡人修仙文字游戏",
  "author": "ningmengchongshui",
  "type": "module",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./package": "./package.json"
  },
  "scripts": {
    "dev": "npx lvy dev",
    "view": "npx lvy dev --jsxp",
    "build": "lvy build",
    "eslint": "eslint src --ext .ts,.tsx,.js --cache --cache-location .eslintcache",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code",
    "lint:staged": "git diff --cached --name-only --diff-filter=ACMRTUXB | grep -E '\\.(ts|tsx|js)$' | xargs -r eslint --cache --cache-location .eslintcache",
    "lint:changed": "git diff origin/main...HEAD --name-only --diff-filter=ACMRTUXB | grep -E '\\.(ts|tsx|js)$' | xargs -r eslint --cache --cache-location .eslintcache",
    "lint:fix": "eslint src --ext .ts,.tsx,.js --fix --cache --cache-location .eslintcache",
    "lint:baseline": "eslint -f json src > eslint-baseline.json || true"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "jsxp": "^1.2.2",
    "lodash-es": "^4.17.21",
    "md5": "^2.3.0",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "@alemonjs/db": "^0.0.11",
    "@eslint/js": "^9.18.0",
    "@types/lodash-es": "^4.17.12",
    "@types/md5": "^2.3.5",
    "@types/node": "^22.10.5",
    "@types/node-schedule": "^2.1.7",
    "alemonjs": "^2.1.0-alpha.31",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "lvyjs": "0.2.20",
    "prettier": "^3",
    "tailwindcss": "3",
    "typescript-eslint": "^8.19.1"
  }
}
