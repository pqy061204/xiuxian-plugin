{
  "name": "alemonjs-xiuxian",
  "version": "1.3.0",
  "description": "凡人修仙文字游戏",
  "author": "ningmengchongshui",
  "type": "module",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./package": "./package.json"
  },
  "scripts": {
    "app": "node index.js",
    "dev": "npx lvy dev",
    "view": "npx lvy dev --jsxp",
    "build": "lvy build",
    "bundle-install": "yarn --cwd frontend install",
    "bundle-dev": "yarn --cwd frontend dev",
    "bundle": "yarn --cwd frontend build",
    "lint": "eslint src --ext .ts,.tsx,.js",
    "lint:fix": "eslint src --ext .ts,.tsx,.js --fix",
    "fix:code": "eslint src --ext .ts,.tsx,.js --fix --quiet",
    "lint:check": "eslint src --ext .ts,.tsx,.js",
    "lint:fix-all": "eslint . --ext .ts,.tsx,.js --fix",
    "lint:staged": "lint-staged",
    "lint:changed": "git diff origin/main...HEAD --name-only --diff-filter=ACMRTUXB | grep -E '\\.(ts|tsx|js)$' | xargs -r eslint",
    "lint:baseline": "eslint -f json src > eslint-baseline.json || true",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "code:check": "npm run lint:check && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format:fix",
    "code:fix-all": "npm run lint:fix-all && npm run format:fix",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "clean": "rm -rf dist lib .eslintcache",
    "clean:all": "rm -rf dist lib .eslintcache node_modules/.cache",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "echo \"No tests specified\" && exit 0",
    "test:watch": "npm run test -- --watch",
    "ci:check": "npm run type-check && npm run code:check",
    "ci:fix": "npm run code:fix-all"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "jsxp": "^1.2.2",
    "koa-bodyparser": "^4.4.1",
    "lodash-es": "^4.17.21",
    "md5": "^2.3.0",
    "minio": "^8.0.6",
    "node-schedule": "^2.1.1",
    "posthog-node": "^5.7.0",
    "sharp": "^0.34.3",
    "svg-captcha": "^1.4.0"
  },
  "devDependencies": {
    "@alemonjs/db": "^0.0.11",
    "@alemonjs/discord": "^2.1.0-alpha.19",
    "@alemonjs/onebot": "^2.1.0-alpha.11",
    "@eslint/js": "^9.18.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/lodash-es": "^4.17.12",
    "@types/md5": "^2.3.5",
    "@types/node": "^22.10.5",
    "@types/node-schedule": "^2.1.7",
    "alemonjs": "^2.1.0-alpha.51",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "lvyjs": "0.2.20",
    "prettier": "^3",
    "sass": "^1.90.0",
    "tailwindcss": "3",
    "typescript-eslint": "^8.19.1"
  },
  "alemonjs": {
    "web": {
      "root": "dist"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --cache --cache-location .eslintcache",
      "prettier --write"
    ],
    "*.{jsx,tsx}": [
      "eslint --fix --cache --cache-location .eslintcache",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss,html}": [
      "prettier --write"
    ],
    "*.{png,jpg,jpeg,gif,svg}": [
      "git add"
    ]
  }
}
